<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:theme="@style/CustomAlertDialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/empty_divider_vertical"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:background="@drawable/bg_alert_dialog"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_end_tv"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                android:showDividers="middle"
                android:divider="@drawable/empty_divider_hand"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_sc_player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <ImageView
                            android:id="@+id/iv_winner1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_hand1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_winner2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                        <TextView
                            android:id="@+id/tv_sc_player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User 2"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_hand2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sc_data3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null : 10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:background="@drawable/bg_alert_dialog">
            <Button
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_style"
                android:layout_margin="10dp"
                android:text="Quitter"
                android:textColor="@color/brown"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_style"
                android:layout_margin="10dp"
                android:text="Re jouer"
                android:textColor="@color/brown"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>